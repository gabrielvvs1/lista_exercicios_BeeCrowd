#include <stdio.h>
 
int main() {
 
    int N, horas, minutos, segundos;

    /* "N" representa o valor em segundos*/
    scanf("%d", &N);
    
    /* calculo das horas, minutos, segundos*/
    horas = N/3600;
    minutos = (N % 3600)/60;
    segundos = N % 60;

    printf("%d:%d:%d\n", horas,minutos,segundos);

    return 0;
}
